
<div class="container d-flex justify-content-center mt-5">
        <h1>Escolha um vídeo</h1>
    </div>

<div class="container-fluid d-flex justify-content-center">
<div class="row">
<%= form_with url: movie_path, method: :post do |form| %>

  <%= form.label :Nome_do_usuário, class: "form-label" %>:
  <%= form.text_field :user_name, class: "form-control", required: true %>
  <br>
  <%= form.label :Email_do_usuário, class: "form-label" %>:
  <%= form.text_field :user_email, class: "form-control", required: true %>
  <br>
  <%= form.label :Sala, class: "form-label" %>
  <%= form.collection_select(:id, @rooms, :id, :name,  class: 'form-control' ) %>
  <br>

  <%= form.submit 'Ver vídeo', class: "btn btn-primary" %>
  <% end %>
  </div>
  </div>